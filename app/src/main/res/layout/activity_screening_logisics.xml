<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_line_color"
    android:orientation="vertical">

    <com.update.viewbar.TitleBar
        android:id="@+id/titlebar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/ll_start_time"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/background_white"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="起始日期"
            android:textColor="@color/black_color"
            android:textSize="@dimen/word_jmedium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="@dimen/margin"
            android:layout_weight="1"
            android:text="全部"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/word_small" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/xyb_jt" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_end_time"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="1dp"
        android:background="@color/background_white"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="截止日期"
            android:textColor="@color/black_color"
            android:textSize="@dimen/word_jmedium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="@dimen/margin"
            android:layout_weight="1"
            android:text="全部"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/word_small" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/xyb_jt" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_audit_status"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="1dp"
        android:background="@color/background_white"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="审核状态"
            android:textColor="@color/black_color"
            android:textSize="@dimen/word_jmedium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_audit_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="@dimen/margin"
            android:layout_weight="1"
            android:text="未审核"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/word_small" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/xyb_jt" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_document_type_choice"
        android:layout_width="match_parent"
        android:layout_height="@dimen/context_hight"
        android:gravity="center_vertical"
        android:layout_marginTop="1dp"
        android:background="@color/background_white"
        android:paddingLeft="@dimen/margin"
        android:paddingRight="@dimen/margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_color"
            android:text="单据类型"
            android:textStyle="bold"
            android:textSize="@dimen/word_jmedium" />

        <TextView
            android:id="@+id/tv_document_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:text="全部"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/word_small" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/xyb_jt" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_logistics_company_choice"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="1dp"
        android:background="@color/background_white"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="物流公司"
            android:textStyle="bold"
            android:textColor="@color/text_black"
            android:textSize="@dimen/word_jmedium" />

        <EditText
            android:id="@+id/et_logistics_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@color/background_white"
            android:hint="请输入物流公司名称"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/word_small" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_unit_name_choice"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="1dp"
        android:background="@color/background_white"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收货单位"
            android:textStyle="bold"
            android:textColor="@color/text_black"
            android:textSize="@dimen/word_jmedium" />

        <EditText
            android:id="@+id/et_unit_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@color/background_white"
            android:hint="请输入收货单位名称"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/word_small" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/background_white"
        android:orientation="vertical"
        android:padding="@dimen/margin">

        <ImageView
            android:id="@+id/cx_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/cx" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_white" />

</LinearLayout>


