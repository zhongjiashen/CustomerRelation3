<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">
    <RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="50dip"
	    android:background="#0099cc">
	    <ImageButton
	        android:id="@+id/fh"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/fh"
	        android:layout_alignParentLeft="true"
	        android:layout_marginLeft="10dip"
	        android:layout_centerVertical="true"/>
	    <TextView 
	        android:id="@+id/jhname"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="23sp"
	        android:textColor="#ffffff"
	        android:layout_centerHorizontal="true"
	        android:layout_centerVertical="true"/>
	    <ImageButton
	        android:id="@+id/zy"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/zy"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="10dip"
	        android:layout_centerVertical="true"/>
	</RelativeLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:orientation="horizontal" >
    <TextView 
        android:id="@+id/xh_textview"
        android:layout_width="40dip"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:layout_marginLeft="5dip"
        android:textColor="#000000"
        android:text="@string/xh"
        android:textAlignment="center"
        />
    <TextView 
        android:id="@+id/name_textview"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:textSize="17sp"
        android:visibility="visible"
        android:layout_weight="1"
        android:textColor="#000000"
        android:ellipsize="end"
        android:singleLine="true"
        android:gravity="center_horizontal"
         android:text="@string/xmmc"
        />
   
    <TextView 
        android:layout_width="60dip"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:textSize="17sp"
        android:visibility="visible"
        android:textColor="#000000"
         android:text="@string/zt"
         android:textAlignment="center"
        />
	</LinearLayout>
	<com.cr.common.XListView 
	    android:id="@+id/jhxm_listview"
	    android:layout_width="fill_parent"
	    android:layout_height="0dip"
	    android:divider="#ffffff"
	    android:layout_weight="1"
	    android:dividerHeight="15dip"
	    android:layout_margin="5dip"
	    android:listSelector="@android:color/transparent"
	    >
	</com.cr.common.XListView>
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="#f2f2f2"
	    android:orientation="vertical"
	    android:gravity="center">
	    <ImageView 
	        android:id="@+id/xzxm"
	        android:layout_marginTop="10dip"
	        android:layout_marginBottom="10dip"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/xzxm"
	        android:layout_gravity="center_horizontal"/>
	    
	</LinearLayout>
</LinearLayout>