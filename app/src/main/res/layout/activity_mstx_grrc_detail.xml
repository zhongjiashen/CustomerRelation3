<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="#0099cc" >
        <ImageButton
            android:id="@+id/fh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:background="@drawable/fh" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/grrc"
            android:textColor="#ffffff"
            android:textSize="23sp" />
        <ImageButton
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:background="@drawable/save" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:layout_marginTop="20dip"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/title_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bt"
            android:textColor="#000000"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/bt_edittext"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:inputType="text" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:layout_marginTop="10dip"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/nr_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nr"
            android:textColor="#000000"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/nr_edittext"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:lines="5"
            android:gravity="top|left"
            android:layout_marginLeft="10dip"
            android:inputType="textMultiLine" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:layout_marginTop="10dip"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/tz_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tz"
            android:textColor="#000000"
            android:textSize="20sp" />
        <CheckBox
            android:id="@+id/tz_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"/>
    </LinearLayout>
	<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:visibility="gone"
        android:layout_marginTop="10dip"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/zq_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zq"
            android:textColor="#000000"
            android:textSize="20sp" />
        <Spinner
            android:id="@+id/zq_spinner"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:layout_marginLeft="10dip"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:layout_marginTop="10dip"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/kssj_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/qssj"
            android:textColor="#000000"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/ksrq_edittext"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:focusable="false"
            android:inputType="text" />
    </LinearLayout>
</LinearLayout>