<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="#0099cc" >

        <ImageButton
            android:id="@+id/fh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:background="@drawable/fh" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/xzqd"
            android:textColor="#ffffff"
            android:textSize="23sp" />

        <ImageButton
            android:id="@+id/qd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:background="@drawable/save" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:layout_gravity="center_horizontal"
        android:background="#ffffff"
        android:paddingBottom="10dip"
        android:paddingTop="20dip" >

        <ImageButton
            android:id="@+id/wcbg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/wcqd" />

        <ImageButton
            android:id="@+id/sbqd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:background="@drawable/sbqd2" />

        <ImageButton
            android:id="@+id/xbqd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:background="@drawable/xbqd2" />
    </LinearLayout>

    <View style="@style/underline2" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:padding="10dip"
        android:gravity="center_vertical" >

        <TextView
           style="@style/font_default"
            android:text="@string/dd2"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/dd"
            style="@style/edittext_bj"
            android:focusable="false"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:lines="2" />
    </LinearLayout>

    <View style="@style/underline2" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:padding="10dip"
        android:gravity="center_vertical" >

        <TextView
            style="@style/font_default"
            android:text="@string/kh"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/kh"
            style="@style/edittext_bj"
            android:drawablePadding="10dip"
            android:drawableRight="@drawable/xyb_jt"
            android:hint="@string/qxzkh"
            android:focusable="false"
            android:inputType="textMultiLine"
            android:textColorHint="#258af2" />
        <ImageView 
            android:id="@+id/sckh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dip"
            android:background="@drawable/delete"/>
    </LinearLayout>

    <View style="@style/underline2" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:padding="10dip"
        android:gravity="center_vertical" >

        <TextView
            style="@style/font_default"
            android:text="@string/pz"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/pz"
            style="@style/edittext_bj"
            android:drawableRight="@drawable/pz"
            android:focusable="false"
            android:hint="@string/djkspz"
            android:drawablePadding="10dip"
            android:inputType="textMultiLine"
            android:textColorHint="#258af2" />
    </LinearLayout>

    <View style="@style/underline2" />
	
    <LinearLayout 
        android:id="@+id/zp_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
	    <ImageView
	        android:id="@+id/show_zp"
	        android:layout_marginLeft="10dip"
	        android:layout_width="100dip"
	        android:layout_height="100dip"
	        android:scaleType="centerCrop" />
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:gravity="center_vertical|right"
	        android:layout_height="fill_parent">
        <ImageView 
            android:id="@+id/sc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dip"
            android:background="@drawable/delete"/>
	        
	    </LinearLayout>
    </LinearLayout>

    <View style="@style/underline2" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        android:paddingRight="10dip"
        android:gravity="center_vertical" >

        <EditText
            android:id="@+id/desc"
            style="@style/edittext_bj"
            android:hint="@string/sdsmb"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:lines="4" />
    </LinearLayout>

    <View style="@style/underline2" />

</LinearLayout>