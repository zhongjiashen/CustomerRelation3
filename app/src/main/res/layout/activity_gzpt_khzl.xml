<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >
    <RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="50dip"
	    android:background="#0099cc">
	    <ImageButton
	        android:id="@+id/fh"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/fh"
	        android:layout_alignParentLeft="true"
	        android:layout_marginLeft="10dip"
	        android:layout_centerVertical="true"/>
	    <TextView 
	        android:id="@+id/khzlname"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="23sp"
	        android:text="@string/khzl"
	        android:textColor="#ffffff"
	        android:layout_centerHorizontal="true"
	        android:layout_centerVertical="true"/>
	    <ImageButton
	        android:id="@+id/zy"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/zy"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="10dip"
	        android:layout_centerVertical="true"/>
	</RelativeLayout>
    <LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="40dip"
	    android:orientation="horizontal"
	    >
	    <TextView
	        android:id="@+id/bf_textview"
	        android:layout_width="0dip"
	        android:layout_height="40dip"
	        android:layout_weight="1"
	        android:textSize="19sp"
	        android:textColor="#000000"
	        android:layout_gravity="center_vertical"
	        android:gravity="center"
	        android:text="@string/bf"/>
	    <TextView 
	        android:id="@+id/zj_textview"
	        android:layout_width="0dip"
	        android:layout_height="40dip"
	        android:textSize="19sp"
	        android:textColor="#000000"
	        android:layout_gravity="center_vertical"
	        android:gravity="center"
	        android:layout_weight="1"
	        android:text="@string/zj"/>
	    <TextView 
	        android:id="@+id/xm_textview"
	        android:layout_width="0dip"
	        android:textSize="19sp"
	        android:textColor="#000000"
	        android:layout_gravity="center_vertical"
	        android:gravity="center"
	        android:layout_height="40dip"
	        android:layout_weight="1"
	        android:text="@string/xm"/>
	    <TextView 
	        android:id="@+id/wh_textview"
	        android:layout_width="0dip"
	        android:textSize="19sp"
	        android:textColor="#000000"
	        android:layout_gravity="center_vertical"
	        android:layout_height="40dip"
	        android:layout_weight="1"
	        android:gravity="center"
	        android:text="@string/wh"/>
	    <TextView 
	        android:id="@+id/cjjl_textview"
	        android:layout_width="0dip"
	        android:textSize="19sp"
	        android:textColor="#000000"
	        android:layout_gravity="center_vertical"
	        android:layout_height="40dip"
	        android:gravity="center"
	        android:layout_weight="1"
	        android:text="@string/cjjl"/>
	</LinearLayout>
	<LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView 
            android:id="@+id/corsor1"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:background="@drawable/index_selectcorsor"
            android:layout_weight="1"
            />
        <ImageView 
            android:id="@+id/corsor2"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:background="@drawable/index_unselectcorsor"
            android:layout_weight="1"
            />
        <ImageView 
            android:id="@+id/corsor3"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:background="@drawable/index_unselectcorsor"
            android:layout_weight="1"
            />
        <ImageView 
            android:id="@+id/corsor4"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:background="@drawable/index_unselectcorsor"
            android:layout_weight="1"
            />
        <ImageView 
            android:id="@+id/corsor5"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:background="@drawable/index_unselectcorsor"
            android:layout_weight="1"
            />
    </LinearLayout>
	<android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        >
    </android.support.v4.view.ViewPager>
    <LinearLayout 
        android:id="@+id/bottomLayout"
	    android:layout_width="fill_parent"
	    android:layout_height="@dimen/khzl_bottom"
	    android:orientation="horizontal"
	    android:background="#e8e8e8">
	    <TextView 
	        android:id="@+id/bflr"
	        android:layout_width="0dip"
	        android:textSize="15sp"
	        android:textColor="#000000"
	        android:layout_gravity="center_vertical"
	        android:layout_height="50dip"
	        android:gravity="center"
	        android:layout_weight="1"
	        android:text="@string/bflr"/>
	   
	    <TextView 
	        android:id="@+id/bjlxr"
	        android:layout_width="0dip"
	        android:textSize="15sp"
	        android:textColor="#000000"
	        android:layout_gravity="center_vertical"
	        android:layout_height="50dip"
	        android:gravity="center"
	        android:layout_weight="1"
	        android:text="@string/bjlxr"/>
	     <!-- <TextView 
	        android:id="@+id/xzlxr"
	        android:layout_width="0dip"
	        android:textSize="15sp"
	        android:textColor="#000000"
	        android:layout_gravity="center_vertical"
	        android:layout_height="50dip"
	        android:gravity="center"
	        android:layout_weight="1"
	        android:text="@string/xzlxr"/> -->
	    <TextView 
	        android:id="@+id/xzxsd"
	        android:layout_width="0dip"
	        android:textSize="15sp"
	        android:textColor="#000000"
	        android:layout_gravity="center_vertical"
	        android:layout_height="50dip"
	        android:gravity="center"
	        android:layout_weight="1"
	        android:text="@string/xzxsd"/>
	    <LinearLayout 
	        android:id="@+id/operLayout"
	        android:layout_width="50dip"
	        android:layout_height="fill_parent"
	        android:gravity="center"
	        >
	        
		    <ImageView 
		        android:id="@+id/oper"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:background="@drawable/khzl_oper"/>
	    </LinearLayout>
    </LinearLayout>
</LinearLayout>
