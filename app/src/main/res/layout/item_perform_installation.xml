<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_white"
                android:paddingLeft="@dimen/margin"
                android:paddingRight="@dimen/margin"
                android:paddingTop="@dimen/margin">

    <TextView
        android:id="@+id/tv_company_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="河南恒视软件科技有限公司"
        android:textColor="@color/text_black"
        android:textSize="@dimen/word_small"/>

    <TextView
        android:id="@+id/tv_technician"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_company_name"
        android:layout_marginTop="@dimen/margin"
        android:text="技术人员"
        android:textColor="@color/text_black"
        android:textSize="@dimen/word_small"/>

    <TextView
        android:id="@+id/tv_commodity_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_technician"
        android:layout_marginTop="@dimen/margin"
        android:text="技术人员"
        android:textColor="@color/text_black"
        android:textSize="@dimen/word_small"/>

    <TextView
        android:id="@+id/tv_maintenance_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_commodity_information"
        android:layout_marginTop="@dimen/margin"
        android:background="@color/button_yellow"
        android:paddingBottom="2dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="2dp"
        android:text="维修中"
        android:textColor="@color/text_white"
        android:textSize="@dimen/word_tiny"/>

    <TextView
        android:id="@+id/tv_audit_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_commodity_information"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginTop="@dimen/margin"
        android:layout_toRightOf="@+id/tv_maintenance_status"
        android:background="@color/colorPrimary"
        android:paddingBottom="2dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="2dp"
        android:text="未审核"
        android:textColor="@color/text_white"
        android:textSize="@dimen/word_tiny"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/xyb_jt"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tv_audit_status"
        android:layout_marginTop="@dimen/margin"
        android:background="@color/black_line_color"/>
</RelativeLayout>