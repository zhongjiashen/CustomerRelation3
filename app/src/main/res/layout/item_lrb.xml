<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/margin"
    android:paddingRight="@dimen/margin"
    android:paddingLeft="@dimen/margin">
    <TextView
        android:id="@+id/tv_mz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="河南恒视软件科技有限公司"
        android:textColor="@color/text_black"
        android:textSize="@dimen/word_small"/>
    <TextView
        android:id="@+id/tv_je"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1000"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:textColor="@color/text_black"
        android:textSize="@dimen/word_small"/>


    <TextView
        android:id="@+id/tv_qcye"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_mz"
        android:layout_marginTop="@dimen/margin"
        android:text="河南恒视软件科技有限公司"
        android:textColor="@color/text_black"
        android:textSize="@dimen/word_small"/>
    <TextView
        android:id="@+id/tv_ljje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_mz"
        android:layout_marginTop="@dimen/margin"
        android:text="1000"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:textColor="@color/text_black"
        android:textSize="@dimen/word_small"/>

    <ImageView
        android:id="@+id/iv_arrow"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/xyb_jt"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tv_ljje"
        android:layout_marginTop="@dimen/margin"
        android:background="@color/black_line_color"/>
</RelativeLayout>