            <View style="@style/underline" />

            <LinearLayout style="@style/detail_relativelayout" >

                <TextView
                    style="@style/font_default"
                    android:text="@string/fwry" />

                <EditText
                    android:id="@+id/fwry_edittext"
                    style="@style/edittext_bj2" />

                <ImageView style="@style/imageview_jt" />
            </LinearLayout>

            <View style="@style/underline" />
             <LinearLayout style="@style/detail_relativelayout" android:id="@+id/wxdw_layout" android:visibility="gone">

                <TextView
                    style="@style/font_default"
                    android:text="@string/wxdw" />

                <EditText
                    android:id="@+id/wxdw_edittext"
                    style="@style/edittext_bj" />
            </LinearLayout>

            <View style="@style/underline" android:visibility="gone" android:id="@+id/wxdw_view"/>

