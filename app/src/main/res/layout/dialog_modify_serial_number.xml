<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/information_pop"
              android:orientation="vertical">
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="修改序列号"
        android:padding="@dimen/margin"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/word_jmedium"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black_line_color"/>
    <EditText
        android:id="@+id/et_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_white"
        android:padding="@dimen/margin"
        android:textSize="@dimen/word_mega"
        android:textColor="@color/text_black"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black_line_color"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="50dp"
        android:background="@color/black_line_color"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/context_hight"
            android:layout_weight="1"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/word_big"
            android:background="@color/transparent"
            android:text="取消"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/black_line_color"/>
        <Button
            android:id="@+id/bt_ok"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/context_hight"
            android:layout_weight="1"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/word_big"
            android:background="@color/transparent"
            android:text="确定"/>
    </LinearLayout>

</LinearLayout>