<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    >
    <RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="50dip"
	    android:background="#0099cc">
	    <ImageButton 
	        android:id="@+id/fh"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/fh"
	        android:layout_alignParentLeft="true"
	        android:layout_marginLeft="10dip"
	        android:layout_centerVertical="true"/>
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="23sp"
	        android:textColor="#ffffff"
	        android:text="@string/xsd"
	        android:layout_centerHorizontal="true"
	        android:layout_centerVertical="true"/>
	    <ImageButton 
	        android:id="@+id/zy"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/zy"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="10dip"
	        android:layout_centerVertical="true"/>
	</RelativeLayout>
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:gravity="center"
	    android:layout_marginTop="20dip"
	    >
	    <ImageButton 
	        android:id="@+id/zd"
	        android:layout_width="wrap_content"
	        android:background="@drawable/zdselect"
	        android:layout_height="wrap_content"/>
	    <ImageButton 
	        android:id="@+id/cpmx"
	        android:layout_width="wrap_content"
	        android:background="@drawable/cpmxunselect"
	        android:layout_height="wrap_content"/>
	</LinearLayout>
	<LinearLayout 
	    android:id="@+id/zd_linearlayout"
	    android:layout_width="fill_parent"
	    android:layout_height="0dip"
	    android:orientation="vertical"
	    android:layout_weight="1">
	    <TextView 
		    android:id="@+id/title"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:textSize="25sp"
		    android:gravity="center"
		    android:layout_marginTop="20dip"
		    android:textColor="#000000"/>
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    android:layout_marginTop="10dip"
	    android:orientation="horizontal">
	    <TextView 
	        android:id="@+id/time"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#000000"
	        android:textSize="20sp"
	        />
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#000000"
	        android:layout_marginLeft="20dip"
	        android:text="@string/je2"
	        android:textSize="20sp"
	        />
	    <TextView 
	        android:id="@+id/je"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#dd1613"
	        android:textSize="20sp"
	        />
	</LinearLayout>
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center_horizontal"
	    android:layout_marginTop="10dip"
	    android:orientation="horizontal">
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#dd1613"
	        android:textSize="20sp"
	        android:text="@string/zt2"
	        />
	    <TextView
	        android:id="@+id/zt" 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#dd1613"
	        android:textSize="20sp"
	        />
	</LinearLayout>
	<View 
	    android:layout_width="fill_parent"
	    android:layout_height="1dip"
	    android:background="#029acc"
	    android:layout_marginTop="10dip"
	    android:layout_marginBottom="10dip"/>
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    android:orientation="horizontal">
	    <TextView 
	        android:layout_width="100dip"
	        android:layout_height="wrap_content"
	        android:text="@string/xsd_djbh"
	        android:gravity="left"
	        android:textSize="20sp"
	        android:textColor="#000000"/>
	    <EditText 
	        android:id="@+id/djbh"
	        android:layout_width="200dip"
	        android:layout_height="40dip"
	        android:layout_marginLeft="5dip"
	        android:textSize="16sp"
	        android:gravity="center_vertical"
	        android:inputType="text"
	        android:editable="false"
	        android:enabled="false"
	        android:focusable="false"
	        android:textColor="#000000"/>
	</LinearLayout>
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    android:orientation="horizontal">
	    <TextView 
	        android:layout_width="100dip"
	        android:layout_height="wrap_content"
	        android:text="@string/xsd_hkfs"
	        android:textSize="20sp"
	        android:gravity="left"
	        android:textColor="#000000"/>
	    <EditText 
	        android:id="@+id/hkfs"
	        android:layout_width="200dip"
	        android:layout_height="40dip"
	        android:layout_marginLeft="5dip"
	        android:gravity="center_vertical"
	        android:inputType="text"
	        android:editable="false"
	        android:enabled="false"
	        android:focusable="false"
	        android:textSize="16sp"
	        android:textColor="#000000"/>
	</LinearLayout>
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    android:orientation="horizontal">
	    <TextView 
	        android:layout_width="100dip"
	        android:layout_height="wrap_content"
	        android:text="@string/xsd_hkrq"
	        android:textSize="20sp"
	        android:gravity="left"
	        android:textColor="#000000"/>
	    <EditText 
	        android:id="@+id/hkrq"
	        android:layout_width="200dip"
	        android:layout_height="40dip"
	        android:layout_marginLeft="5dip"
	        android:textSize="16sp"
	        android:gravity="center_vertical"
	        android:inputType="text"
	        android:editable="false"
	        android:enabled="false"
	        android:focusable="false"
	        android:textColor="#000000"/>
	</LinearLayout>
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    android:orientation="horizontal">
	    <TextView 
	        android:layout_width="100dip"
	        android:layout_height="wrap_content"
	        android:gravity="left"
	        android:text="@string/xsd_lxr"
	        android:textSize="20sp"
	        android:textColor="#000000"/>
	    <EditText 
	        android:id="@+id/lxr"
	        android:layout_width="200dip"
	        android:layout_height="40dip"
	        android:layout_marginLeft="5dip"
	        android:gravity="center_vertical"
	        android:textSize="16sp"
	        android:inputType="text"
	        android:focusable="false"
	        android:editable="false"
	        
	        android:textColor="#000000"/>
	</LinearLayout>
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    android:orientation="horizontal">
	    <TextView 
	        android:layout_width="100dip"
	        android:layout_height="wrap_content"
	        android:text="@string/xsd_sj"
	        android:textSize="20sp"
	        android:gravity="left"
	        android:textColor="#000000"/>
	    <EditText 
	        android:id="@+id/sj"
	        android:layout_width="200dip"
	        android:layout_height="40dip"
	        android:layout_marginLeft="5dip"
	        android:gravity="center_vertical"
	        android:inputType="text"
	        android:editable="false"
	        android:focusable="false"
	        android:textSize="16sp"
	        android:textColor="#000000"/>
	</LinearLayout>
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    android:orientation="horizontal">
	    <TextView 
	        android:layout_width="100dip"
	        android:layout_height="wrap_content"
	        android:text="@string/xsd_dh"
	        android:textSize="20sp"
	        android:gravity="left"
	        android:textColor="#000000"/>
	    <EditText 
	        android:id="@+id/dh"
	        android:layout_width="200dip"
	        android:layout_height="40dip"
	        android:layout_marginLeft="5dip"
	        android:gravity="center_vertical"
	        android:inputType="text"
	        android:editable="false"
	        android:focusable="false"
	        android:textSize="16sp"
	        android:textColor="#000000"/>
	</LinearLayout>
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    android:orientation="horizontal">
	    <TextView 
	        android:layout_width="100dip"
	        android:layout_height="wrap_content"
	        android:text="@string/xsd_shdz"
	        android:textSize="20sp"
	        android:gravity="left"
	        android:textColor="#000000"/>
	    <EditText 
	        android:id="@+id/shdz"
	        android:layout_width="200dip"
	        android:layout_height="40dip"
	        android:layout_marginLeft="5dip"
	        android:textSize="16sp"
	        android:inputType="text"
	        android:gravity="center_vertical"
	        android:editable="false"
	        android:focusable="false"
	        android:textColor="#000000"/>
		</LinearLayout>
	</LinearLayout>
	<ListView 
   	    android:id="@+id/cpmx_listview"
   	    android:layout_width="fill_parent"
   	    android:layout_height="0dip"
   	    android:layout_marginTop="20dip"
   	    android:visibility="gone"
   	    android:layout_weight="1">
   	</ListView>
   	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="50dip"
	    android:background="#f2f2f2">
	    <ImageButton 
	        android:id="@+id/add"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/add"
	        android:layout_alignParentLeft="true"
	        android:layout_marginLeft="10dip"
	        android:visibility="gone"
	        android:layout_centerVertical="true"/>
	     <ImageButton 
	        android:id="@+id/bj"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/bj"
	        android:layout_alignParentLeft="true"
	        android:layout_marginLeft="10dip"
	        
	        android:layout_centerVertical="true"/>
	    <ImageButton 
	        android:id="@+id/delete"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/delete"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="10dip"
	        android:layout_centerVertical="true"/>
	</RelativeLayout>
</LinearLayout>
